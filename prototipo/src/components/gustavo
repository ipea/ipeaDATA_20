import React from 'react'
import ReactDOM from 'react-dom'
import App from './components/App' //layout m√£e
import Home from './components/Home'
import CompiledData from './components/CompiledData'
import RealEstates from './components/RealEstates'
import Person from './components/Person'

// import react router deps
import { Router, Route, IndexRoute } from 'react-router' 
import { Provider } from 'react-redux'
import store, { history } from './store'

// import route_callbacks
import { onRoutePersonEnter }  from './route_callbacks'

require("../node_modules/bootstrap/dist/js/bootstrap.js")
require("../node_modules/bootstrap/dist/css/bootstrap.css")
require("./styles/main.css")
require("./fonts/font-awesome-4.6.3/css/font-awesome.css")

const router = (
  <Provider store={store}>
    <Router history={history}>
      <Route path='/' component={App}>
        <IndexRoute component={Home}></IndexRoute>
        <Route path='compiledData(/:person)' onEnter={onRoutePersonEnter} component={CompiledData}></Route>
        <Route path='real-states(/:unit)' component={RealEstates}></Route>  
        <Route path='person' component={Person} onEnter={onRoutePersonEnter}></Route>  
      </Route>
    </Router>
  </Provider>
)

ReactDOM.render(router, document.getElementById('root'))
  